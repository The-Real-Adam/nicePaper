<h3><%= title %></h3>

<table id="superSchedule">
  <tr class = "text-center">
    <th class = "col-lg-auto text-center">account.id</th>
    <th class = "col-lg-auto text-center">email</th>
    <th class = "col-lg-auto text-center">firstName1</th>
    <th class = "col-lg-auto text-center">lastName1</th>
    <th class = "col-lg-auto text-center">firstName2</th>
    <th class = "col-lg-auto text-center">lastName2</th>
    <th class = "col-lg-auto text-center">weddingDate</th>
    <th class = "col-lg-auto text-center">account_id</th>
    <th class = "col-lg-auto text-center">role</th>
    <th class = "col-lg-auto text-center">template_id</th>
    <th class = "col-lg-auto text-center">created_at</th>
    <th class = "col-lg-auto text-center">updated_at</th>
  </tr>

  <% for (let i = 0; i < data.length; i++) { %>
    <tr class = "text-center">

        <td class = "col-lg-auto text-center"><%= data[i].id %></td>
        <td class = "col-lg-auto text-center"><%= data[i].email %></td>
        <td class = "col-lg-auto text-center"><%= data[i].first_name_1 %></td>
        <td class = "col-lg-auto text-center"><%= data[i].last_name_1 %></td>
        <td class = "col-lg-auto text-center"><%= data[i].first_name_2 %></td>
        <td class = "col-lg-auto text-center"><%= data[i].last_name_2 %></td>
        <td class = "col-lg-auto text-center"><%= data[i].wedding_date %></td>
        <td class = "col-lg-auto text-center"><%= data[i].account_id %></td>
        <td class = "col-lg-auto text-center"><%= data[i].role %></td>
        <td class = "col-lg-auto text-center"><%= data[i].template_id %></td>
        <td class = "col-lg-auto text-center"><%= data[i].created_at %></td>
        <td class = "col-lg-auto text-center"><%= data[i].updated_at %></td>

        <td><a href="/schedule/<%= data[i].id %>/edit"><button class="edit" type="button" name="button" id="<%= data[i].id %>">edit</button></a>
        <button class="delete" type="button" name="button" id="<%= data[i].id %>">delete</button>
        <a href=""><button class="userSched" type="button" name="button" id="<%= data[i].id %> ">Get this user's schedule</button></a>
      </td>
    </tr>
  <% } %>
</table>

<% if (typeof data == 'object' && data[0].time) { %>
  <h2> Schedule for account</h2>

  <table id="schedule">
    <tr class ="row">
      <th class="col-sm-auto col-6 text-center">Time:</th>
      <th class="col-sm-auto col-6 text-center">Event:</th>
      <th class="col-sm-auto col-6 text-center">Description:</th>
      <th class="col-sm-auto col-6 text-center"></th>
    </tr>

    <% for (let i = 0; i < data.length; i++) { %>
        <% if(data[i].time !== 'hide') { %>
      <tr class ="row">
        <td class="col-sm-auto col-6 text-center"><%= data[i].time %></td>
        <td class="col-sm-auto col-6 text-center"><%= data[i].item %></td>
        <td class="col-sm-auto col-6 text-center"><%= data[i].description %></td>
        <td class="col-sm-auto col-6 text-center">
          <a href="/schedule/<%= data[i].id %>/edit"><button class="edit" type="button" name="button" id="<%= data[i].id %>">edit</button></a>
          <button class="delete" type="button" name="button" id="<%= data[i].id %>">delete</button>
        </td>
      </tr>
      <% } %>
    <% } %>
  <% } %>
</table>
